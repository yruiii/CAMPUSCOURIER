<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telegram Handle:"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telegram_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_marginStart="50dp"
                android:textSize="11sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reasons:"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Reason_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="detail"
                android:textSize="10sp"
                android:layout_marginStart="50dp"
                android:paddingBottom="10dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/ReportDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Reason_detail"
                android:text="Reason for reporting:"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Reason_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Reason_detail"
                android:text="why"
                android:textSize="10sp"
                android:layout_marginStart="50dp"
                android:paddingBottom="10dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/Other_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Reason_report"
                android:text="Other_Description:"
                android:textStyle="bold"
                android:textSize="13dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Other_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Reason_report"
                android:text="detail"
                android:textSize="10sp"
                android:paddingBottom="10dp"
                android:layout_marginStart="50dp"
                android:visibility="gone"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:layout_marginStart="50dp"/>
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>