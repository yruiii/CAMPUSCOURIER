<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/urgency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!!"
                    android:textColor="#FF0000"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/requestedItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="Item Requested"
                    android:textSize="20sp"
                    android:textStyle="bold" />



            </LinearLayout>


            <TextView
                android:id="@+id/itemLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Location"
                android:textSize="16sp"
                android:padding="5dp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/itemStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="16sp"
                android:padding="5dp"
                android:drawableLeft="@drawable/shipping"
                android:drawablePadding="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/requestTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="17:54"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/schedule"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:id="@+id/requestDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2024/04/01"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:drawableLeft="@drawable/date"
                    android:drawablePadding="8dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
